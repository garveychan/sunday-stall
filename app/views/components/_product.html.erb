<%= tag.div(class: "xl:w-1/4 md:w-1/2 p-4") do %>
  <%= tag.a(href: stall_product_path(product.stall.id, product.id)) do %>
    <%= tag.div(class: "bg-gray-100 p-6 shadow-lg rounded-lg card h-96") do %>
      <%= tag.image(src: url_for(product.image), class: "h-40 rounded w-full object-cover object-center mb-6") %>
      <%= tag.h3(product.stall.title, class: "tracking-widest text-indigo-500 text-xs font-medium title-font") %>
      <%= tag.h2(product.name, class: "text-lg text-gray-900 font-medium title-font mb-4") %>
      <%= tag.p(product.description, class: "leading-relaxed text-base line-clamp-3") %>
    <% end %>
  <% end %>
<% end %>
