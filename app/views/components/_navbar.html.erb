<header class="text-gray-600 body-font bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href=<%= root_path %>>
      <%= render "components/stand" %>
      <span class="ml-3 text-xl text-indigo-600">SundayStall</span>
    </a>

    <div class="flex-1 flex items-center justify-center px-2 lg:ml-6 lg:justify-start">
      <div class="max-w-lg w-full lg:max-w-xs">
        <label for="search" class="sr-only">Search</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
          <input id="search" name="search" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm" placeholder="Search" type="search">
        </div>
      </div>
    </div>

    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Favourites</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Purchases</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Messages</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Stall</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Profile</a>
      <% if can? :manage, User %>
        <%= link_to rails_admin_path, method: :get, class: "mr-5 hover:text-gray-900" do %>Admin Dashboard<% end %>
      <% end %>
    </nav>

    <button class="inline-flex items-center border-0 py-1 px-3 focus:outline-none rounded text-base mt-4 md:mt-0 text-white bg-indigo-500 hover:bg-indigo-600">
      <% if current_user.nil? %>
        <%= link_to new_user_session_path do %>Log In<% end %>
      <% else %>
        <%= link_to destroy_user_session_path, method: :delete do %>Log Out<% end %>
      <% end %>
    </button>
  </div>
</header>
