<header class="text-gray-600 body-font bg-white shadow-md">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href=<%= root_path %>>
      <%= render "components/stand" %>
      <span class="ml-3 text-xl">SundayStall</span>
    </a>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Favourites</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Purchases</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Messages</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Stall</a>
      <a class="mr-5 hover:text-gray-900" href=<%= root_path %>>Profile</a>
    </nav>
    <button class="inline-flex items-center border-0 py-1 px-3 focus:outline-none rounded text-base mt-4 md:mt-0 text-white bg-indigo-500 hover:bg-indigo-600">
      <% if current_user.nil? %>
        <%= link_to new_user_session_path do %>Sign In<% end %>
      <% else %>
        <%= button_to destroy_user_session_path, method: :delete do %>Log Out<% end %>
      <% end %>
      <% if can? :manage, User %>
        <%= button_to rails_admin_path, method: :get do %>Admin Dashboard<% end %>
      <% end %>
    </button>
  </div>
</header>
