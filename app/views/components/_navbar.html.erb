<header class="text-gray-600 body-font bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href=<%= root_path %>>
      <%= render "components/stand" %>
      <span class="ml-3 text-xl text-indigo-700 font-bold">SundayStall</span>
    </a>

    <form>
    <div class="flex-1 flex items-center justify-center px-2 lg:ml-6 lg:justify-start">
      <div class="max-w-lg w-full lg:max-w-xs">
        <label for="search" class="sr-only">Search</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
          <input type="search" name="search" placeholder="Search" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600 sm:text-sm">
          <input type="submit" style="display: none;"/>
        </div>
      </div>
    </div>
    </form>

    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <% if current_user && current_user.stall %>
        <%= link_to "My Stall", stall_path(id: current_user.stall_id), class: "mx-2 hover:text-gray-900" %>
      <% else %>
        <%= link_to "Create Stall", new_stall_path, class: "mx-2 hover:text-gray-900" %>
      <% end %>
        <i class="mx-1 fal fa-horizontal-rule fa-rotate-90"></i>
        <%= link_to "All Stalls", stalls_path, class:"mx-2 hover:text-gray-900" %>
      <% if current_user %>
        <i class="mx-1 fal fa-horizontal-rule fa-rotate-90"></i>
        <%= link_to "Favourites", favourites_stalls_path, class:"mx-2 hover:text-gray-900" %>
        <%= link_to "Profile", edit_user_registration_path, class: "mx-2 hover:text-gray-900" %>
        <p class="mx-2 text-indigo-500"><%= current_user.first_name %></p>
      <% end %>
        <i class="mx-1 fal fa-horizontal-rule fa-rotate-90"></i>
    </nav>

    <button class="mx-2 inline-flex items-center border-0 py-1 px-3 focus:outline-none rounded text-base mt-4 md:mt-0 text-white bg-indigo-600 hover:bg-indigo-700">
      <% if current_user.nil? %>
        <%= link_to "Log In", new_user_session_path %>
      <% else %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      <% end %>
    </button>
  </div>
</header>