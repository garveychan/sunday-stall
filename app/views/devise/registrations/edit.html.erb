<main data-turbolinks="false">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="h-auto flex pt-12 pb-24 bg-white px-4 overflow-hidden sm:px-6 lg:px-8">
    <div class="relative max-w-xl mx-auto space-y-4">
      <div class="mx-auto h-6 w-auto flex justify-center">
        <%= render "components/stand" %>
      </div>
      <div class="text-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Update your Profile
        </h2>
        <p class="mt-4 text-lg leading-6 text-gray-500">
          Let us know what you'd like to change below.
        </p>
      </div>
      <div class="mt-2">
        <form action="#" method="POST" class="grid grid-cols-1 gap-y-8 sm:grid-cols-2 sm:gap-x-8">
          <div class="flex justify-between mb-2">
            <div class="w-1/2 mr-2">
              <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :first_name, maxlength: 50, autocomplete: "given-name", autofocus: "true", class:"py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
            </div>
            <div class="w-1/2 ml-2">
              <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :last_name, maxlength: 50, autocomplete: "family-name", class:"py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
            </div>
          </div>
          <div class="flex justify-between mb-2">
            <div class="w-1/2 mr-2">
              <%= f.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700"%>
              <%= f.date_field :date_of_birth, autocomplete: "date-of-birth", class:"py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
            </div>
            <div class="w-1/2 ml-2">
              <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700"%>
              <%= f.telephone_field :phone_number, maxlength: 12, autocomplete: "phone-number", class:"py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
            </div>
          </div>
          <div class="sm:col-span-2">
            <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700"%>
            <div class="mb-2">
              <%= f.email_field :email, maxlength: 100, autocomplete: "email", class:"py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p class="mt-2 text-sm text-center text-gray-500">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <div class="sm:col-span-2">
              <% if @minimum_password_length %>
                <% password_label = "Password - (#{@minimum_password_length} characters minimum) - Leave blank if you don't want to change it."%>
              <% else %>
                <% password_label = "Password"%>
              <% end %>
              <div class="mb-2">
                <%= f.label :password, password_label, class:"block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
              </div>
              <div class="mb-2">
                <%= f.label :password_confirmation, "Password Confirmation", class:"block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md" %>
              </div>
              <div class="mb-2">
                <%= f.label :current_password, "Current Password", class:"block text-sm font-medium text-gray-700" %>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "py-3 px-4 block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 border border-red-300 rounded-md" %>
              </div>
              <p class="mt-2 text-sm text-center text-gray-500">We need your current password to confirm your changes.</p>
            </div>
            <div class="sm:col-span-2 mt-3">
              <%= f.submit "Update Profile", class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
            </div>
            <div class="sm:col-span-2 mt-3">
              <button type="button" data-open="delete-modal" class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer">
                Delete Account
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%# Delete Confirmation Modal %>
  <meta name="turbolinks-visit-control" content="reload">
  <div id="delete-modal" class="modal fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
        <div class="hidden sm:block absolute top-0 right-0 pt-4 pr-4">
          <button type="button" data-close class="bg-white rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="sm:flex sm:items-start">
          <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
            <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              Delete Confirmation
            </h3>
            <div class="mt-2">
              <p class="text-sm text-gray-500">
                Are you sure you want to delete your account?<br>
                There's no going back!
              </p>
            </div>
          </div>
        </div>
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
          <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
            <%= link_to "Delete Account", registration_path(resource_name), method: :delete %>
          </button>
          <button type="button" data-close class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    const openEls = document.querySelectorAll("[data-open]");
    const closeEls = document.querySelectorAll("[data-close]");
    const isVisible = "is-visible";
    
    for (const el of openEls) {
      el.addEventListener("click", function() {
        const modalId = this.dataset.open;
        document.getElementById(modalId).classList.add(isVisible);
      });
    }
    
    for (const el of closeEls) {
      el.addEventListener("click", function() {
        this.parentElement.parentElement.parentElement.parentElement.classList.remove(isVisible);
      });
    }
    
    document.addEventListener("keyup", e => {
      if (e.key == "Escape" && document.querySelector(".modal.is-visible")) {
        document.querySelector(".modal.is-visible").classList.remove(isVisible);
      }
    });
  </script>
</main>
