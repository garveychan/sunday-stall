<div class="notification max-w-md w-full bg-white shadow-lg rounded-lg pointer-events-auto hidden" data-controller="notification" data-notification-timeout="<%= @data[:timeout] %>">
  <div class="notification rounded-lg shadow-xs overflow-hidden">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="h-6 w-6 <%= @icon_color_class %>">
            <i class="far <%= @icon_class %>"></i>
          </div>
        </div>
        <div class="ml-3 w-0 flex-1 pt-0.5">
          <% if @data[:title].class == Array %>
            <% @data[:title].each do |title| %>
              <p class="text-sm leading-5 font-medium text-gray-900">
                <%= title %>
              </p>
            <% end %>
          <% else %>
            <p class="text-sm leading-5 font-medium text-gray-900">
              <%= @data[:title] %>
            </p>
          <% end %>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button class="inline-flex text-gray-400 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150" data-action="notification#close">
            <i class="h-5 w-5 far fa-times"></i>
          </button>
        </div>
      </div>
    </div>
    <% if @data[:countdown] %>
      <div class="bg-indigo-600 rounded-lg h-1 w-0" data-notification-target="countdown"></div>
    <% end %>
  </div>
</div>
